@model String


@{
    ViewData["Title"] = "Message an Admin";
}
<body>
    <h3>Reply to <em> @Model</em></h3>
    <form asp-route="MessageAdmin" method="post">
        <label for="memberName">Member</label>
        <input name="memberName" /> <br /> <br />
        <label for="messageText">Message</label>
        <textarea name="messageText" rows="3" cols="100"></textarea>
        <input type="submit" value="Enter"/> <!--asp-route-sent="@*System.DateTime.Now.ToString()*@"/> <br /> -->
        <!--It is @*System.DateTime.Now.ToString()*@ <br /> -->
    </form>
    <br />
    <a href="MessageAdmin">List of messages to Admin</a> <br />
    <a href="ContactPage">Or contact other Members!</a> <br />
    <a href="/Home/Index">Back to Home</a>
</body>